{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
    },
    "outDir": "./dist/",
    "removeComments": true,
    "skipLibCheck" : true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "include": [
    "./unit-tests/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules",
    "./unit-tests/**/tests/*.test.ts",
    "./src/**/tests/*.ts",
    "./src/**/tests/*.tsx"
  ]
}
