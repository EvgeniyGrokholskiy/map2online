{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": false,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "paths": {

    },
    "outDir": "./dist-ts/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "include": [
    "./node_modules/**/*.js",
    "./src/**/*.js",
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./unit-tests/**/tests/*.test.ts",
    "./src/**/tests/*.ts",
    "./src/**/tests/*.tsx"
  ]
}
